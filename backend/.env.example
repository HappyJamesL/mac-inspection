# 数据库配置
# 数据库类型: sqlite, oracle
DATABASE_TYPE=sqlite

# SQLite配置
SQLITE_URL=sqlite:///macinsp.db

# Oracle配置（当DATABASE_TYPE=oracle时生效）
ORACLE_USER=your_oracle_user
ORACLE_PASSWORD=your_oracle_password
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=orcl

# 应用配置
APP_NAME=MAC检测系统
DEBUG=True
HOST=0.0.0.0
PORT=8000

# JWT配置
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS配置
BACKEND_CORS_ORIGINS=http://172.20.180.81:5173,http://localhost:5173

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760